{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target/es6/",
    "sourceMap": true,
    "target": "es5"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        ["env", {
          "targets": { "browsers": ["last 2 versions", "ie 11"] }
        }]
      ],
      "plugins": [
        ["transform-react-jsx", { "pragma": "m" }]
      ]
    }
  }
}
